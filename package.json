{
  "name": "itunes-remote",
  "version": "2.1.0",
  "description": "Control iTunes via CLI",
  "license": "MIT",
  "repository": "mischah/itunes-remote",
  "author": {
    "name": "Michael KÃ¼hnel",
    "email": "mail@michael-kuehnel.de",
    "url": "http://michael-kuehnel.de"
  },
  "bin": {
    "itunes": "cli.js"
  },
  "preferGlobal": true,
  "engines": {
    "node": ">=0.10.0"
  },
  "scripts": {
    "lint": "xo",
    "test": "mocha",
    "preparepublish": "npm run coveralls",
    "posttest": "npm run lint && npm run coverage",
    "coverage": "mocha -r blanket -R html-cov > coverage.html",
    "coveralls": "NODE_ENV=test YOURPACKAGE_COVERAGE=1 mocha --require blanket --reporter mocha-lcov-reporter | coveralls"
  },
  "files": [
    "index.js",
    "cli.js",
    "lib"
  ],
  "keywords": [
    "cli-app",
    "cli",
    "itunes",
    "mac",
    "osx",
    "remote",
    "Music",
    "Terminal",
    "OS X"
  ],
  "dependencies": {
    "chalk": "2.0.1",
    "js-function-string": "1.0.0",
    "log-symbols": "2.0.0",
    "osascript": "1.2.0",
    "require-dir": "0.3.2",
    "vorpal": "1.12.0"
  },
  "devDependencies": {
    "blanket": "1.2.3",
    "chai": "4.1.0",
    "coveralls": "2.13.1",
    "mocha": "3.4.2",
    "mocha-lcov-reporter": "1.3.0",
    "xo": "0.18.2"
  },
  "xo": {
    "envs": [
      "node",
      "mocha"
    ],
    "esnext": false,
    "rules": {
      "capitalized-comments": ["off"],
      "unicorn/filename-case": ["off"],
      "array-callback-return": ["off"]
    }
  },
  "config": {
    "blanket": {
      "pattern": [
        "index.js",
        "cli.js",
        "lib"
      ],
      "data-cover-never": [
        "node_modules",
        "lib"
      ]
    }
  }
}
